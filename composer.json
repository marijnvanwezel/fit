  "homepage": "https://github.com/marijnvanwezel/fit",
  "readme": "https://github.com/marijnvanwezel/fit/README.md",
  "license": "GPL-3.0-only",
  "authors": [
    {
      "name": "Marijn van Wezel",
      "email": "marijnvanwezel@gmail.com",
      "homepage": "https://www.marijn.it",
      "role": "lead"
    }
  ],
  "support": {
    "issues": "https://github.com/marijnvanwezel/fit/issues",
    "source": "https://github.com/marijnvanwezel/fit"
  },
  "require": {
    "php": ">=8.1",
    "marijnvanwezel/reflection-file": "^2.0",
    "symfony/console": "^6.0"
  },
  "autoload": {
    "psr-4": {
      "Fit\\": "src/"
    }
